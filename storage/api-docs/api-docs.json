{
    "swagger": "2.0",
    "info": {
        "title": "Alpogo API Documentation",
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/users/": {
            "get": {
                "summary": "Lista de usuarios",
                "description": "Retorna la lista de usuarios",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "summary": "registrar usuario",
                "description": "Registra un usuario",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "data",
                        "in": "body",
                        "description": "JSON data",
                        "required": true,
                        "schema": {},
                        "type": "json"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Detalle de usuario",
                "description": "Retorna el detalle de un usaurio",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de un usuario",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Invalid id supplied",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "first_name",
                "last_name",
                "email",
                "passport",
                "birthday"
            ],
            "type": "object",
            "xml": {
                "name": "User"
            }
        }
    }
}